{
  "name": "super-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "postinstall": "bun run --cwd packages/db db:generate",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "dev:cli": "turbo dev --filter=supercode-cli"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.2.21",
  "dependencies": {
    "-": "^0.0.1",
    "g": "^2.0.1",
    "vercel": "^50.13.2"
  }
}
